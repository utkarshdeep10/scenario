<% include partials/header %>
<div class="container" style="padding-top: 8%;">
        <h1 class="display-4 text-center">Edit <%= products.name %>: </h1>
        <hr>
        <div class="row justify-content-center align-items-center">    
            <div class="col-md-6 col-lg-4">
                    <form action="/main/<%= products._id %>?_method=PUT" method="post">
                        <div class="form-group">
                                
                                <input class="form-control" type="text" name="name" value="<%= products.name %>">
                            </div>
                        <div class="form-group">
                                
                                <input class="form-control" type="text" name="image" value="<%= products.image %>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="content" value="<%= products.content %>">
                     </div>
                        <div class="form-group">
                            <button class="btn btn-warning btn-block">Submit</button>
                        </div>
                    </form>
                    <a href="/main/<%= products._id %>">Back</a>
                </div>
        </div>
</div>
<% include partials/footer %>